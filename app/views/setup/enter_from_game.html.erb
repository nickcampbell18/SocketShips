<div class="page-header">
  <h1>Join <%= @g.name %></h1>
</div>
<style>
	#homeform input[type="text"] {
		font-size: 140%;
		height: 22px;
	}
</style>
<form class="form-stacked" method="post" id="homeform">
		<input id="tokentag" type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
		
    <div class="clearfix">
      <label for="userName">Your name (as shown to the loser)</label>
      <div class="input">
        <input class="span6" id="userName" name="userName" size="30" type="text" value="<%= params[:userName] %>">
        <span class="help-inline">e.g. Mighty Godzilla</span>
      </div>
    </div><!-- /clearfix -->
    <div>
      <input type="submit" class="btn primary" value="Continue &gt;">&nbsp;<a class="btn" href="/home">Cancel</a>
    </div>
</form>
